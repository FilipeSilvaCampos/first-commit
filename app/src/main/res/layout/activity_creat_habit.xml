<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.CreatHabitActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toStartOf="@+id/edtNameCreat"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageCreatHabit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/coffee" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edtNameCreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txt_hint_creat_title"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <ImageButton
        android:id="@+id/btnAlarmState"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:alpha="0.50"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintEnd_toEndOf="@+id/tvHourCreat"
        app:layout_constraintStart_toStartOf="@+id/tvHourCreat"
        app:layout_constraintTop_toBottomOf="@+id/tvHourCreat"
        app:tint="#FF2966C3" />

    <Button
        android:id="@+id/btnCreatHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_btn_creat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtDescriptionCreat" />

    <TextView
        android:id="@+id/tvSoundAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:text="@string/txt_default_ringtone"
        android:textColor="#FF2966C3"
        app:layout_constraintEnd_toEndOf="@+id/tvHourCreat"
        app:layout_constraintStart_toStartOf="@+id/tvHourCreat"
        app:layout_constraintTop_toBottomOf="@+id/btnAlarmState" />

    <TextView
        android:id="@+id/tvHourCreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="14:30"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtNameCreat"
        app:layout_constraintStart_toStartOf="@+id/edtNameCreat"
        app:layout_constraintTop_toBottomOf="@+id/edtNameCreat"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_creat_description"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSoundAlarm"
        app:layout_constraintStart_toStartOf="@+id/tvSoundAlarm"
        app:layout_constraintTop_toBottomOf="@+id/tvSoundAlarm" />

    <EditText
        android:id="@+id/edtDescriptionCreat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:importantForAutofill="no"
        android:inputType="textImeMultiLine"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>